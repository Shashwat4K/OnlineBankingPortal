<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>servlets.VerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify_kit</servlet-name>
        <servlet-class>servlets.verify_kit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDetails</servlet-name>
        <servlet-class>servlets.UpdateDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>otp_servlet</servlet-name>
        <servlet-class>servlets.otp_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redirect_page</servlet-name>
        <servlet-class>servlets.redirect_page</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/VerifyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verify_kit</servlet-name>
        <url-pattern>/verify_kit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDetails</servlet-name>
        <url-pattern>/UpdateDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>otp_servlet</servlet-name>
        <url-pattern>/otp_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redirect_page</servlet-name>
        <url-pattern>/redirect_page</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
